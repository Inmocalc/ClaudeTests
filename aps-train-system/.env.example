# APS Train System - Environment Configuration
# Copy this file to .env and adjust values as needed

# ==================== Persistence Configuration ====================

# Persistence mode: memory | redis | postgres | hybrid
# - memory: In-memory storage (development/testing)
# - redis: Redis for configuration only
# - postgres: PostgreSQL for orders only
# - hybrid: Redis for config + PostgreSQL for orders (recommended for production)
PERSISTENCE_MODE=memory

# ==================== Database Configuration ====================

# PostgreSQL Connection String
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://aps_user:aps_password@localhost:5432/aps_train_system

# Alternative PostgreSQL Configuration (if not using DATABASE_URL)
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=aps_user
# DB_PASSWORD=aps_password
# DB_NAME=aps_train_system

# ==================== Redis Configuration ====================

# Redis Connection String
# Format: redis://[username:password@]host:port[/db]
REDIS_URL=redis://localhost:6379

# Alternative Redis Configuration (if not using REDIS_URL)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# ==================== Application Configuration ====================

# Node Environment
NODE_ENV=development

# Application Port (for Vite dev server)
PORT=5173

# API Base URL (if using external backend)
# API_URL=http://localhost:3000/api

# ==================== Development/Testing ====================

# Enable debug logging
DEBUG=false

# Enable verbose logging for database operations
DB_DEBUG=false

# ==================== Docker Compose Configuration ====================

# These are used by docker-compose.yml
# Uncomment to override defaults

# Postgres
# POSTGRES_USER=aps_user
# POSTGRES_PASSWORD=aps_password
# POSTGRES_DB=aps_train_system

# pgAdmin
# PGADMIN_DEFAULT_EMAIL=admin@aps.local
# PGADMIN_DEFAULT_PASSWORD=admin

# ==================== Production Settings ====================

# For production, use hybrid mode with secure credentials
# PERSISTENCE_MODE=hybrid
# DATABASE_URL=postgresql://secure_user:secure_password@prod-db-host:5432/aps_train_system
# REDIS_URL=redis://:secure_redis_password@prod-redis-host:6379
