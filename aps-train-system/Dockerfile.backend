# Backend API Dockerfile
# Node.js server with Express, connects to Redis and PostgreSQL

FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY ts config.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY src/ ./src/
COPY backend/ ./backend/
COPY server.ts ./
COPY infrastructure/ ./infrastructure/ 2>/dev/null || true

# Build TypeScript
RUN npm run build:backend || echo "Build script not found, will run with tsx"

# Expose port
EXPOSE 3001

# Health check
HEALTHCHECK --interval=30s --timeout=10s --retries=3 --start-period=40s \
  CMD node -e "require('http').get('http://localhost:3001/health', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})"

# Start server
CMD ["npx", "tsx", "server.ts"]
